#!/bin/bash

if [ $# -ne 2 ]; then
    echo "Usage: batch_rename <old_term> <new_term>"
    exit 1
fi

OLD_TERM="$1"
NEW_TERM="$2"

# Use git ls-files to get tracked files, respecting .gitignore
# Optionally include untracked files (but not ignored ones) with --others --exclude-standard
# Use grep -I to automatically skip binary files (much faster than checking MIME types)
(git ls-files -- '*' && git ls-files --others --exclude-standard -- '*') | sort -u | xargs -r grep -Il . 2>/dev/null | xargs -r sed -i "s#$OLD_TERM#$NEW_TERM#g"
